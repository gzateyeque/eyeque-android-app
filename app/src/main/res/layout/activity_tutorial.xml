<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eyeque.mono.TutorialActivity">

    <com.eyeque.mono.PatternView
        android:layout_width="fill_parent"
        android:layout_height="260sp"
        android:id="@+id/drawView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "10sp"
        android:text="Tutorial"
        android:id="@+id/tutorialHeaderTextView"
        android:textColor="@color/background_material_dark"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop = "10sp"
        android:id="@+id/tutorialDivider"
        android:background="@android:color/darker_gray"/>

    <ScrollView
        android:id="@+id/tutorialScrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tutorial_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <WebView
            android:id="@+id/tutorialWebView"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY">
        </WebView>

        <Button
            android:id="@+id/tutorialContinueButton"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Continue"
            android:textStyle="bold"
            android:background="@android:color/holo_blue_dark"
            android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
